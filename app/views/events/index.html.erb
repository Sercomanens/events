<ul>
  <%@events.each do |event|%>
    <li>
      <Strong><%=event.name %></Strong>
      In <%=event.location %>
      <% if event.price == 0 %>
        Free
      <% else %>
      <%=number_to_currency(event.price, precision: 0) %>
      <% end %>
      </li>
      <p>
        Description: <%= truncate(event.description, lenght: 35, seperator: ' ' %>
      </p>
      <p>
        Starts at: <%=event.starts_at %>
      </p>
    <%end%>
</ul>
